<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="x 1,2 ="
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:id="@+id/x_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                app:layout_constraintBottom_toBottomOf="@+id/x_txt"
                android:background="#100F0F"
                app:layout_constraintStart_toEndOf="@id/x_txt"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/divider"
                android:layout_marginStart="76dp"
                android:layout_marginHorizontal="36dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="nominator"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:id="@+id/nominator"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@id/x_txt"
                app:layout_constraintBottom_toTopOf="@id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="deonominator"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:id="@+id/denominator"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@id/nominator"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:text="x1= ?"
                android:textSize="25sp"
                android:id="@+id/ans1"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/x_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="x2= ?"
                android:textSize="25sp"
                android:id="@+id/ans2"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>